doctype html
html(lang='en')
  head
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=5')
    meta(name='description', content='GraphQL API for Requarks projects')
    title Requarks Graph
    link(href='https://fonts.googleapis.com/css?family=Raleway:300,400,600,700', rel='stylesheet')
    style(type='text/css').
      html {
        height: 100%;
      }
      body {
        background-color: #01579B;
        font-family: 'Raleway', sans-serif;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        color: #FFF;
        font-size: 14px;
        padding: 0;
        margin: 0;
      }
      svg {
        width: 200px;
      }
      h1 {
        font-weight: 300;
        font-size: 4rem;
        margin: 2rem 0;
      }
      h2 {
        font-weight: 600;
        margin-bottom: 2rem;
      }
      a {
        color: #29B6F6;
        text-decoration: none;
        font-size: 1.1rem;
      }
      a + a {
        border-left: 1px solid #FFF;
        padding-left: 20px;
        margin-left: 20px;
      }
      a:hover, a:active, a:focus {
        color: #81D4FA;
        text-decoration: underline;
      }
      .build {
        position: absolute;
        width: 100%;
        height: 80px;
        background-color: #212121;
        bottom: 0;
        left: 0;
        color: #666666;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        font-family: 'Arial', sans-serif;
        font-size: .8rem;
      }
