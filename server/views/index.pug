doctype html
html
  head
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(charset='UTF-8')
    meta(name='viewport', content='user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1')
    title Requarks Graph
    link(href='https://fonts.googleapis.com/css?family=Raleway:300,400,600,700', rel='stylesheet')
    style(type='text/css').
      html {
        height: 100%;
      }
      body {
        background-color: #01579b;
        font-family: 'Raleway', sans-serif;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        color: #FFF;
        font-size: 14px;
        padding: 0;
        margin: 0;
      }
      h1 {
        font-weight: 300;
        font-size: 4rem;
        margin: 2rem 0;
        text-shadow: 1px 1px 10px #01579b;
      }
      h2 {
        font-weight: 600;
        text-shadow: 1px 1px 10px #01579b;
      }
      .build {
        position: absolute;
        width: 100%;
        height: 80px;
        background-color: #263238;
        bottom: 0;
        left: 0;
        color: #90a4ae;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        font-family: 'Arial', sans-serif;
        font-size: .8rem;
      }
  body
    img(src='/img/logo.png', alt='Requarks Graph')
    h1 Requarks Graph
    h2 GraphQL API for Requarks projects
    .build
      span Build #{packageVersion}
